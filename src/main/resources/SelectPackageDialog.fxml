<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="assettracking.controller.SelectPackageDialogController"
            prefWidth="600.0" prefHeight="400.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <top>
        <VBox spacing="5">
            <Label text="Add failed scans to an existing package or create a new one."/>
            <TextField fx:id="searchField" promptText="Search by Tracking Number..." style="-fx-margin-top: 5;"/>
        </VBox>
    </top>
    <center>
        <TableView fx:id="packageTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="trackingNumberCol" prefWidth="200.0" text="Tracking Number"/>
                <TableColumn fx:id="senderNameCol" prefWidth="200.0" text="Sender"/>
                <TableColumn fx:id="receiveDateCol" prefWidth="150.0" text="Receive Date"/>
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="selectButton" onAction="#handleSelect" text="Add to Selected Package" styleClass="success" disable="true"/>
            <Button fx:id="createNewButton" onAction="#handleCreateNew" text="Create New Package"/>
        </HBox>
    </bottom>
</BorderPane>