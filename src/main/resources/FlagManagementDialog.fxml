<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="assettracking.controller.FlagManagementDialogController"
            prefWidth="800.0" prefHeight="600.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <top>
        <TextField fx:id="searchField" promptText="Filter by Serial Number or Reason..."
                   style="-fx-margin-bottom: 10;"/>
    </top>
    <center>
        <TableView fx:id="flagsTable" editable="true">
            <columns>
                <TableColumn fx:id="serialCol" prefWidth="200.0" text="Serial Number" editable="false"/>
                <TableColumn fx:id="preventRemovalCol" prefWidth="150.0" text="Prevent Auto-Removal"/>
                <TableColumn fx:id="reasonCol" prefWidth="400.0" text="Flag Reason (Double-click to edit)"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <Separator/>
            <Label styleClass="h4" text="Add / Update Flag"/>
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER"/>
                </columnConstraints>
                <Label text="Serial Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="serialField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Reason:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="reasonField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <CheckBox fx:id="preventRemovalCheck" text="Prevent automatic removal from AD/SCCM on intake"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Button fx:id="saveButton" onAction="#handleAddOrUpdate" text="Add / Update Flag" styleClass="success"
                        GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.rowSpan="3"/>
            </GridPane>
            <Separator/>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#handleImportFromFile" text="Import from File..."/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="removeButton" onAction="#handleRemove" text="Remove Selected Flag" styleClass="danger"/>
                <Button fx:id="closeButton" onAction="#handleClose" text="Close"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>