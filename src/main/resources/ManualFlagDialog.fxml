<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="assettracking.controller.ManualFlagDialogController"
      spacing="15" style="-fx-padding: 20;" prefWidth="450.0">
    <children>
        <Label styleClass="h4" text="Manually Flag a Device"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <Label text="Serial Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="serialField" promptText="Enter the serial number to flag" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Reason for Flag:" GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="TOP_LEFT"/>
            <TextArea fx:id="reasonArea" prefHeight="100.0" wrapText="true" promptText="Describe the issue..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 0 0 0;">
            <children>
                <Button fx:id="saveButton" text="Save Flag" styleClass="success"/>
                <Button fx:id="cancelButton" text="Cancel"/>
            </children>
        </HBox>
    </children>
</VBox>