<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assettracking.controller.AddAssetDialogController" prefWidth="1200.0" prefHeight="700.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Intake Mode:"/>
            <RadioButton fx:id="standardIntakeRadio" text="Standard Intake">
                <toggleGroup><ToggleGroup fx:id="intakeModeToggleGroup" /></toggleGroup>
            </RadioButton>
            <RadioButton fx:id="monitorIntakeRadio" text="Monitor Intake" toggleGroup="$intakeModeToggleGroup"/>
        </HBox>
    </top>
    <center>
        <StackPane>
            <!-- Monitor Intake Mode Panel -->
            <VBox fx:id="monitorModePane" spacing="15" style="-fx-padding: 20;" managed="false" visible="false">
                <Label styleClass="h4" text="Monitor Intake Workflow"/>
                <Separator/>

                <CheckBox fx:id="standardMonitorCheckBox" text="Standard Deployable Monitor" selected="true"/>

                <!-- Pane for Standard, SKU-based monitors -->
                <GridPane fx:id="standardMonitorPane" hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Printer:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="monitorPrinterCombo" prefWidth="350.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Serial Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="monitorSerialField" promptText="Scan or enter Serial Number" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Model:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="monitorModelField" promptText="Enter Model (autocompletes)" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="monitorDescriptionField" promptText="Enter description (autocompletes)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
                <!-- Pane for Non-Standard, manual entry monitors -->
                <GridPane fx:id="manualMonitorPane" hgap="10" vgap="8" visible="false" managed="false">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Serial Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="manualSerialField" promptText="Scan or enter Serial Number" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Manual Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="manualDescriptionField" promptText="e.g., Old 19-inch Dell Monitor" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="functioningButton" onAction="#handleFunctioningButton" text="Functioning &amp; Print Labels" styleClass="success" prefHeight="50.0"/>
                    <Button onAction="#handleBrokenButton" text="Broken / Dispose" styleClass="danger" prefHeight="50.0"/>
                </HBox>
                <Label fx:id="monitorFeedbackLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
                <Region VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button onAction="#handleClose" text="Close Window"/>
                </HBox>
            </VBox>

            <!-- Standard Intake Mode Panel -->
            <VBox fx:id="standardModePane" spacing="10">
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <BorderPane.margin><Insets top="10" /></BorderPane.margin>
                    <BorderPane fx:id="textModePane">
                        <top>
                            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 10 0;">
                                <CheckBox fx:id="bulkAddCheckBox" text="Bulk Add (Table Mode)" />
                            </HBox>
                        </top>
                        <center>
                            <GridPane hgap="10" vgap="8" maxWidth="Infinity">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <Label text="Serial Number(s):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                                    <ToggleButton fx:id="multiSerialToggle" text="Multi-Line" />
                                    <StackPane HBox.hgrow="ALWAYS">
                                        <TextField fx:id="serialField" onAction="#handleLookupSerial" promptText="Scan a single serial and press Enter to look up" />
                                        <TextArea fx:id="serialArea" prefHeight="100.0" managed="false" visible="false" promptText="Scan multiple serials, one per line."/>
                                    </StackPane>
                                </HBox>

                                <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <ComboBox fx:id="categoryBox" editable="true" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Label text="Make:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <TextField fx:id="makeField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                                <Label text="Model Number:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                <TextField fx:id="modelField" promptText="Enter 2+ chars for autocomplete" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                                <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                <TextField fx:id="descriptionField" promptText="Enter 2+ chars for autocomplete" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                                <Label text="IMEI:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                                <TextField fx:id="imeiField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                            </GridPane>
                        </center>
                        <right>
                            <VBox spacing="10" prefWidth="250.0" style="-fx-border-color: -color-border-muted; -fx-border-width: 0 0 0 1; -fx-padding: 0 0 0 10;">
                                <Button fx:id="lookupButton" onAction="#handleLookupSerial" text="Lookup Serial" maxWidth="Infinity"/>
                                <Label fx:id="probableCauseLabel" wrapText="true" style="-fx-font-style: italic; -fx-text-fill: -color-accent-fg;"/>
                                <Label fx:id="melActionLabel" wrapText="true" style="-fx-font-style: italic; -fx-text-fill: -color-accent-fg;"/>
                            </VBox>
                        </right>
                    </BorderPane>

                    <BorderPane fx:id="tableModePane" managed="false" visible="false" VBox.vgrow="ALWAYS">
                        <center>
                            <TableView fx:id="deviceTable" editable="true">
                                <columns>
                                    <TableColumn fx:id="serialCol" prefWidth="150.0" text="Serial Number" />
                                    <TableColumn fx:id="imeiCol" prefWidth="150.0" text="IMEI" />
                                    <TableColumn fx:id="categoryCol" prefWidth="120.0" text="Category" />
                                    <TableColumn fx:id="makeCol" prefWidth="100.0" text="Make" />
                                    <TableColumn fx:id="modelCol" prefWidth="150.0" text="Model Number" />
                                    <TableColumn fx:id="descriptionCol" prefWidth="250.0" text="Description" />
                                    <TableColumn fx:id="causeCol" prefWidth="150.0" text="Probable Cause" editable="false"/>
                                </columns>
                            </TableView>
                        </center>
                        <bottom>
                            <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
                                <padding><Insets top="10" /></padding>
                                <Button onAction="#handleAddRow" text="Add Row" />
                                <Button onAction="#handleRemoveRow" text="Remove Selected Row" />
                            </HBox>
                        </bottom>
                    </BorderPane>
                </VBox>
                <VBox spacing="10">
                    <TitledPane text="Asset Condition &amp; Disposition" collapsible="false">
                        <HBox spacing="40">
                            <VBox spacing="10">
                                <Label style="-fx-font-weight: bold;" text="Condition" />
                                <RadioButton fx:id="refurbRadioButton" text="Refurb (Default)">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="conditionToggleGroup" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="newRadioButton" text="New" toggleGroup="$conditionToggleGroup" />
                            </VBox>
                            <VBox spacing="5">
                                <Label style="-fx-font-weight: bold;" text="Disposition (Overrides Condition)" />
                                <GridPane hgap="10" vgap="5">
                                    <CheckBox fx:id="sellScrapCheckBox" text="Sell/Scrap this batch" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                                    <Label fx:id="sellScrapStatusLabel" text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="sellScrapStatusCombo" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    <Label fx:id="sellScrapSubStatusLabel" text="Sub Status:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="sellScrapSubStatusCombo" prefWidth="200.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    <Label fx:id="disqualificationLabel" text="Reason:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <TextField fx:id="disqualificationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                    <Label fx:id="boxIdLabel" text="Box ID:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                    <TextField fx:id="boxIdField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                                </GridPane>
                            </VBox>
                        </HBox>
                    </TitledPane>
                    <Label fx:id="feedbackLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold;" />
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <padding><Insets top="10" /></padding>
                        <Button fx:id="saveButton" onAction="#handleSave" text="Save and Process Receipts" styleClass="success" />
                        <Button fx:id="closeButton" onAction="#handleClose" text="Close" />
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>