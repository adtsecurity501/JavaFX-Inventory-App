<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="assettracking.controller.PackageIntakeController">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- FIX: Removed maxWidth and adjusted column constraints for better scaling -->
            <GridPane hgap="10" vgap="15" style="-fx-max-width: 600;">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Tracking Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="trackingField" onAction="#handleTrackingLookup"
                           promptText="Scan or enter tracking number and press Enter" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <Label fx:id="trackingErrorLabel" styleClass="error-label" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>

                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="firstNameField" promptText="First name" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>

                <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="lastNameField" promptText="Last name" GridPane.columnIndex="1"
                           GridPane.rowIndex="3"/>

                <Label text="Zip Code:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="zipField" promptText="e.g., 90210" GridPane.columnIndex="1"
                           GridPane.rowIndex="4"/>
                <Label fx:id="zipErrorLabel" styleClass="error-label" GridPane.columnIndex="1"
                       GridPane.rowIndex="5"/>

                <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="cityField" promptText="City (auto-filled from zip)" GridPane.columnIndex="1"
                           GridPane.rowIndex="6"/>

                <Label text="State:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="stateField" promptText="State (auto-filled from zip)" GridPane.columnIndex="1"
                           GridPane.rowIndex="7"/>
            </GridPane>
            <Button fx:id="startButton" onAction="#handleStartIntake" text="Start Package Intake"
                    styleClass="success" prefWidth="200.0"/>
        </VBox>
    </center>
</BorderPane>