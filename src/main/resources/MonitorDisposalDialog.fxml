<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="assettracking.controller.MonitorDisposalDialogController"
      spacing="15" style="-fx-padding: 20;" prefWidth="450.0">
    <Label fx:id="headerLabel" styleClass="h4" text="Confirm Disposal for Monitor:"/>
    <Separator/>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <Label text="Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Sub-Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="subStatusCombo" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Reason/Note:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="reasonField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 0 0 0;">
        <Button fx:id="confirmButton" text="Confirm Disposal" styleClass="danger"/>
        <Button fx:id="cancelButton" text="Cancel"/>
    </HBox>
</VBox>