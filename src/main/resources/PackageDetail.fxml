<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assettracking.controller.PackageDetailController" prefWidth="900.0" prefHeight="700.0">
    <top>
        <Label fx:id="headerLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10;" text="Package Details" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <!-- MODIFIED: Removed SplitPane, now just a TitledPane for assets -->
        <TitledPane text="Devices / Assets" collapsible="false" BorderPane.alignment="CENTER">
            <TableView fx:id="assetsTable">
                <columns>
                    <TableColumn fx:id="assetSerialCol" prefWidth="150.0" text="Serial Number"/>
                    <TableColumn fx:id="assetCategoryCol" prefWidth="120.0" text="Category"/>
                    <TableColumn fx:id="assetStatusCol" prefWidth="120.0" text="Status"/>
                    <TableColumn fx:id="assetSubStatusCol" prefWidth="180.0" text="Sub Status"/>
                </columns>
                <placeholder><Label text="No devices received in this package."/></placeholder>
            </TableView>
        </TitledPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button onAction="#handleAddAsset" text="Receive Asset(s)..."/>
            <!-- REMOVED: "Add Peripheral..." Button -->
            <Button onAction="#handleFinish" text="Finish" styleClass="success"/>
        </HBox>
    </bottom>
</BorderPane>