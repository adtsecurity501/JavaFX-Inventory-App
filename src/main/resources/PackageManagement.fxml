<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="assettracking.controller.PackageManagementController">
    <top>
        <FlowPane hgap="10" vgap="10" style="-fx-padding: 10;">
            <Label text="Search Tracking #:"/>
            <TextField fx:id="searchField" promptText="Enter tracking number..."/>
            <Label text="From:"/>
            <DatePicker fx:id="fromDatePicker"/>
            <Label text="To:"/>
            <DatePicker fx:id="toDatePicker"/>
            <Button onAction="#handleRefresh" text="Filter"/>
            <Button onAction="#handleClearFilters" text="Clear"/>
            <Button onAction="#handleRefresh" text="Refresh" styleClass="success"/>
        </FlowPane>
    </top>
    <center>
        <TableView fx:id="packageTable" fixedCellSize="35.0" styleClass="fixed-row-size">
            <columns>
                <TableColumn fx:id="trackingNumberCol" prefWidth="150.0" text="Tracking Number"/>
                <TableColumn fx:id="receiveDateCol" prefWidth="120.0" text="Receive Date"/>
                <TableColumn fx:id="firstNameCol" prefWidth="120.0" text="First Name"/>
                <TableColumn fx:id="lastNameCol" prefWidth="120.0" text="Last Name"/>
                <TableColumn fx:id="cityCol" prefWidth="150.0" text="City"/>
                <TableColumn fx:id="stateCol" text="State"/>
                <TableColumn fx:id="zipCodeCol" text="Zip Code"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <BorderPane>
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                    <Label text="Items per Page:"/>
                    <ComboBox fx:id="rowsPerPageCombo"/>
                </HBox>
            </left>
            <center>
                <Pagination fx:id="pagination"/>
            </center>
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <Button onAction="#handleOpenPackage" text="Open Selected Package"/>
                    <Button onAction="#handleDeletePackage" text="Delete Selected" styleClass="danger"/>
                    <Button onAction="#handleOpenPackage" text="Open Selected Package"/>
                </HBox>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>