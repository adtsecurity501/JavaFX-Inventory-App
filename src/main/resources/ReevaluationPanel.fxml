<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="assettracking.controller.ReevaluationPanelController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label text="Serial Number:"/>
            <TextField fx:id="serialField" onAction="#handleSearch" promptText="Scan serial..."/>
            <Button onAction="#handleSearch" text="Search"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label fx:id="infoLabel" style="-fx-font-size: 16px;"/>
        </VBox>
    </center>
</BorderPane>