<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="assettracking.controller.MainViewController">
    <top>
        <HBox fx:id="titleBar" alignment="CENTER_LEFT" styleClass="title-bar" spacing="10">
            <padding>
                <Insets left="10"/>
            </padding>
            <Label text="Asset Tracking &amp; Inventory Management" styleClass="title-bar-text"/>
            <Region HBox.hgrow="ALWAYS"/>

            <!-- NEW THEME SWITCHER -->
            <Label text="Theme:" styleClass="title-bar-text"/>
            <ComboBox fx:id="themeComboBox" prefWidth="150"/>
            <!-- END NEW -->

            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="minimizeButton" onAction="#handleMinimize" styleClass="window-button">
                    <graphic>
                        <SVGPath content="M 0 5 H 10" styleClass="window-icon"/>
                    </graphic>
                </Button>
                <Button fx:id="maximizeButton" onAction="#handleMaximize" styleClass="window-button">
                    <graphic>
                        <SVGPath content="M 0 1 H 9 V 10 H 0 Z" styleClass="window-icon"/>
                    </graphic>
                </Button>
                <Button fx:id="closeButton" onAction="#handleClose" styleClass="window-button, window-close-button">
                    <graphic>
                        <SVGPath content="M 0 0 L 10 10 M 10 0 L 0 10" styleClass="window-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <Tab text="Dashboard">
                    <fx:include fx:id="dashboard" source="Dashboard.fxml"/>
                </Tab>
                <Tab text="Package Intake">
                    <fx:include source="PackageIntake.fxml"/>
                </Tab>
                <Tab text="Package Management">
                    <fx:include source="PackageManagement.fxml"/>
                </Tab>
                <Tab text="Device Status Tracking">
                    <fx:include source="DeviceStatusTracking.fxml"/>
                </Tab>
                <Tab text="Box ID Viewer">
                    <fx:include source="BoxIdViewer.fxml"/>
                </Tab>
                <Tab text="Label Printing">
                    <fx:include source="LabelPrinting.fxml"/>
                </Tab>
                <Tab text="SKU Management">
                    <fx:include source="SkuManagement.fxml"/>
                </Tab>
                <Tab text="iPad Provisioning">
                    <fx:include source="iPadProvisioning.fxml"/>
                </Tab>
            </TabPane>
        </VBox>
    </center>
</BorderPane>