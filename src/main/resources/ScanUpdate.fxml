<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="assettracking.controller.ScanUpdateController"
            fitToWidth="true" prefHeight="700.0" prefWidth="800.0"
            style="-fx-background-color: transparent;">
    <content>
        <VBox spacing="15" styleClass="scan-update-pane">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <TitledPane text="Step 1: Choose the New Status" collapsible="false">
                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Set Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="statusCombo" prefWidth="300.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Set Sub-Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="subStatusCombo" prefWidth="300.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <CheckBox fx:id="printLabelsToggle" text="Print Deployment Labels on Scan"
                              GridPane.rowIndex="2" GridPane.columnIndex="1"
                              visible="false" managed="false" selected="true"/>

                    <!-- THIS VBOX IS MODIFIED -->
                    <VBox fx:id="skuSelectionBox" spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false" managed="false">
                        <children>
                            <Label text="Label Printer:"/>
                            <ComboBox fx:id="labelPrinterCombo" prefWidth="300.0" promptText="Select Printer..."/>
                            <Label text="Label SKU:" style="-fx-padding: 5 0 0 0;"/>
                            <TextField fx:id="skuSearchField" promptText="Search for SKU to print..."/>
                            <ListView fx:id="skuListView" prefHeight="100.0"/>

                            <!-- NEW HBOX WRAPPER -->
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <TextField fx:id="selectedSkuField" editable="false" promptText="Selected SKU" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="clearSkuButton" text="Clear"/>
                            </HBox>
                        </children>
                    </VBox>

                    <Label fx:id="disposalLocationLabel" text="Box ID:" visible="false" managed="false" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <HBox fx:id="boxIdHBox" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <TextField fx:id="disposalLocationField" onAction="#onBoxIdScanned" promptText="Scan Box ID and press Enter..." HBox.hgrow="ALWAYS"/>
                        <Button fx:id="clearBoxIdButton" onAction="#handleClearBoxId" text="Clear"/>
                    </HBox>

                    <Label text="Change Note (Optional):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="changeLogField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
            </TitledPane>

            <Label fx:id="feedbackLabel" alignment="CENTER" maxWidth="Infinity" styleClass="h2"/>

            <!-- The rest of the FXML file remains unchanged -->
            <TitledPane text="Step 2: Scan to Update" collapsible="false" VBox.vgrow="ALWAYS">
                <VBox spacing="20" style="-fx-padding: 10;">
                    <VBox spacing="8">
                        <Label styleClass="h4" text="Update a Single Device"/>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Scan Device Serial:"/>
                            <TextField fx:id="scanSerialField" onAction="#onSerialScanned" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                    <Separator/>
                    <VBox spacing="8">
                        <Label styleClass="h4" text="Update All Devices by Box ID"/>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Scan Box ID:"/>
                            <TextField fx:id="scanLocationField" onAction="#onUpdateByLocation" HBox.hgrow="ALWAYS"/>
                            <Button onAction="#onUpdateByLocation" text="Update All in Box" styleClass="accent"/>
                        </HBox>
                    </VBox>
                </VBox>
            </TitledPane>

            <VBox spacing="5" VBox.vgrow="ALWAYS" minHeight="400.0">
                <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
                    <TitledPane text="Successful Scans" collapsible="false">
                        <TableView fx:id="successTable">
                            <columns>
                                <TableColumn fx:id="successSerialCol" prefWidth="150.0" text="Serial Number"/>
                                <TableColumn fx:id="successStatusCol" prefWidth="250.0" text="New Status"/>
                                <TableColumn fx:id="successTimestampCol" prefWidth="180.0" text="Timestamp"/>
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </TitledPane>
                    <TitledPane text="Failed/Unrecognized Scans" collapsible="false">
                        <!-- The content is now JUST the TableView, no more VBox/HBox -->
                        <TableView fx:id="failedTable">
                            <columns>
                                <TableColumn fx:id="failedSerialCol" prefWidth="150.0" text="Serial Number"/>
                                <TableColumn fx:id="failedReasonCol" prefWidth="250.0" text="Reason"/>
                                <TableColumn fx:id="failedTimestampCol" prefWidth="180.0" text="Timestamp"/>
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </TitledPane>
                </SplitPane>

                <!-- NEW HBox for the button, now outside the SplitPane -->
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 5 0 0 0;">
                    <Button onAction="#handleProcessFailedScans" text="Process Failed Scans..."/>
                </HBox>
            </VBox>
        </VBox>
    </content>
</ScrollPane>