<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="assettracking.controller.iPadProvisioningController">
    <center>
        <SplitPane dividerPositions="0.4" style="-fx-padding: 10 0 0 0;">
            <!-- Left Side: Workflow -->
            <VBox spacing="10" style="-fx-padding: 0 10 0 0;">
                <Label styleClass="h4" text="Assignment Workflow"/>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="importDeviceListButton" onAction="#handleImportDeviceList" text="Import Device List..."/>
                    <Label fx:id="deviceListStatusLabel" text="Device List: Not Loaded"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="importRosterButton" onAction="#handleImportRoster" text="Import Roster..."/>
                </HBox>
                <Separator/>
                <Label text="1. Scan Device Serial Number:"/>
                <TextField fx:id="serialScanField" promptText="Scan Serial..."/>
                <ToggleButton fx:id="bulkModeToggle" text="Bulk Assignment Mode: OFF" maxWidth="Infinity"/>
                <Label text="2. Filter Roster by SN Ref #:"/>
                <TextField fx:id="snRefFilterField" promptText="Enter last digits of SN Ref #..."/>

                <TableView fx:id="rosterTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <!-- THIS IS THE FIX YOU FOUND: fx:id attributes are now present -->
                        <TableColumn fx:id="rosterNameCol" prefWidth="180" text="Name"/>
                        <TableColumn fx:id="rosterSnRefCol" prefWidth="120" text="SN Ref #"/>
                    </columns>
                </TableView>

                <Button onAction="#handleAddDeviceToStaging" text="Add to Staging (Assigned)" styleClass="accent" maxWidth="Infinity"/>
                <Button fx:id="stageUnassignedButton" onAction="#handleStageUnassigned" text="Stage as Unassigned" maxWidth="Infinity"/>
            </VBox>

            <!-- Right Side: Staged Devices & Lookup -->
            <VBox spacing="10" style="-fx-padding: 0 0 0 10;">
                <Label styleClass="h4" text="Staged Devices for Export"/>
                <TableView fx:id="stagingTable" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="stageCarrierCol" prefWidth="100" text="Carrier"/>
                        <TableColumn fx:id="stageCarrierAccountCol" prefWidth="150" text="Carrier Acct #"/>
                        <TableColumn fx:id="stageFirstNameCol" prefWidth="100" text="First Name"/>
                        <TableColumn fx:id="stageLastNameCol" prefWidth="100" text="Last Name"/>
                        <TableColumn fx:id="stageEmailCol" prefWidth="180" text="Email"/>
                        <TableColumn fx:id="stageSerialCol" prefWidth="150" text="Serial Number"/>
                        <TableColumn fx:id="stageImeiCol" prefWidth="150" text="IMEI"/>
                        <TableColumn fx:id="stageSimCol" prefWidth="180" text="SIM (ICCID)"/>
                        <TableColumn fx:id="stageSnRefCol" prefWidth="150" text="SN Ref #"/>
                    </columns>
                </TableView>
                <TitledPane text="Device Database Lookup" collapsible="true" expanded="false">
                    <VBox spacing="10" style="-fx-padding: 10;">
                        <TextField fx:id="dbSearchField" promptText="Search by Serial, IMEI, or SIM... Press Enter to search."/>
                        <TableView fx:id="dbResultsTable" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="dbSerialCol" prefWidth="150" text="Serial Number"/>
                                <TableColumn fx:id="dbImeiCol" prefWidth="150" text="IMEI"/>
                                <TableColumn fx:id="dbSimCol" prefWidth="180" text="SIM (ICCID)"/>
                                <TableColumn fx:id="dbDeviceNameCol" prefWidth="100" text="Name"/>
                            </columns>
                        </TableView>
                    </VBox>
                </TitledPane>
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="statusLabel" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button onAction="#handleSetTmobile" text="Set Selected to T-Mobile"/>
            <Button onAction="#handleUpdateSim" text="Update SIM for Selected..."/>
            <Button onAction="#handleRemoveSelected" text="Remove Selected from Stage"/>
            <Button fx:id="exportButton" onAction="#handleExport" text="Export to Template..." styleClass="success" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>