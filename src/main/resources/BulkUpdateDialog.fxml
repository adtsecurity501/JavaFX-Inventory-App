<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
      fx:controller="assettracking.controller.BulkUpdateDialogController"
      spacing="15" style="-fx-padding: 20;" prefWidth="800.0" prefHeight="600.0">

    <Label styleClass="h4" text="Bulk Status Update from List"/>
    <Label text="Paste a list of serial numbers (one per line). The system will ignore duplicates and header rows like 'Tag'."
           wrapText="true"/>

    <TextArea fx:id="serialsTextArea" VBox.vgrow="ALWAYS" promptText="FJWWZJ3&#10;2H5XZJ3&#10;6G6HBJ3..."/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <Label text="New Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="New Sub-Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="subStatusCombo" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="processButton" text="Process List" onAction="#handleProcess" styleClass="success"/>
        <Button text="Close" onAction="#handleClose"/>
    </HBox>

    <Separator style="-fx-padding: 10 0 0 0;"/>

    <GridPane hgap="20" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <VBox spacing="5" GridPane.columnIndex="0">
            <Label fx:id="successLabel" style="-fx-font-weight: bold;" text="Successfully Updated (0)"/>
            <ListView fx:id="successListView" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox spacing="5" GridPane.columnIndex="1">
            <Label fx:id="notFoundLabel" style="-fx-font-weight: bold;" text="Not Found in Database (0)"/>
            <ListView fx:id="notFoundListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </GridPane>
</VBox>