<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="assettracking.controller.SkuManagementController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <center>
        <TableView fx:id="skuTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="skuNumberCol" prefWidth="120.0" text="SKU Number" />
                <TableColumn fx:id="modelNumberCol" prefWidth="150.0" text="Model Number" />
                <TableColumn fx:id="categoryCol" prefWidth="120.0" text="Category" />
                <TableColumn fx:id="manufacturerCol" prefWidth="100.0" text="Manufacturer" />
                <TableColumn fx:id="descriptionCol" prefWidth="400.0" text="Description" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" />
            </padding>
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="NEVER" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <Label text="SKU Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="skuNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Model Number:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="modelNumberField" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Manufacturer:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="manufacturerField" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="descriptionField" GridPane.columnSpan="3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#handleNew" text="New" />
                <Button onAction="#handleDelete" text="Delete Selected" />
                <Button onAction="#handleSave" styleClass="success" text="Save Changes" />
            </HBox>
            <Label fx:id="statusLabel" alignment="CENTER" maxWidth="Infinity"/>
        </VBox>
    </bottom>
</BorderPane>