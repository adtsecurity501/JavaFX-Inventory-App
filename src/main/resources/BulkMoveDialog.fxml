<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="assettracking.controller.BulkMoveDialogController"
      spacing="15" style="-fx-padding: 20;" prefWidth="800.0" prefHeight="600.0">

    <Label styleClass="h4" text="Bulk Move Serials Between Boxes"/>
    <Separator/>

    <TitledPane text="Step 1: Specify Boxes &amp; Paste Serials" collapsible="false" VBox.vgrow="ALWAYS">
        <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
            <!-- Box IDs -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <Label text="Source Box ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="sourceBoxField" promptText="Enter the Box ID to move items FROM" GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>
                <Label text="Destination Box ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="destinationBoxField" promptText="Enter the Box ID to move items TO"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- List Input -->
            <Label text="Paste Serial Numbers (one per line):" style="-fx-padding: 10 0 0 0;"/>
            <TextArea fx:id="serialListArea" promptText="Paste serial numbers here..." VBox.vgrow="ALWAYS"/>
        </VBox>
    </TitledPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="statusLabel" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-font-weight: bold;"/>
        <Button fx:id="moveButton" text="Move Serials" onAction="#handleMove" styleClass="success" disable="true"/>
        <Button text="Close" onAction="#handleClose"/>
    </HBox>

    <Separator style="-fx-padding: 10 0 0 0;"/>

    <GridPane hgap="20" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <VBox spacing="5" GridPane.columnIndex="0">
            <Label fx:id="successLabel" style="-fx-font-weight: bold;" text="Successfully Moved (0)"/>
            <ListView fx:id="successListView" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox spacing="5" GridPane.columnIndex="1">
            <Label fx:id="failedLabel" style="-fx-font-weight: bold;" text="Not Found in Source Box (0)"/>
            <ListView fx:id="failedListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </GridPane>
</VBox>